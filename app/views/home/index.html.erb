<h1 class="text-center font-weight-bold">CookBook</h1>

<p class="text-center text-secondary">Bem-vindo ao maior livro de receitas online</p>

<% @recipes.each do |recipe| %>
    <div class="">
        <h1 class="font-weight-bold"><%= recipe.title %></h1>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= recipe.recipe_type %></li>
            <li class="list-group-item"><%= recipe.cuisine %></li>
            <li class="list-group-item"><%= recipe.difficulty %></li>
            <li class="list-group-item"><%= recipe.cook_time %> minutos</li>
        </ul>
    </div>

<% end %>